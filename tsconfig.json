{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "lib": ["ES2021"],
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "pretty": true,
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "./",
    "types": ["node", "mocha", "chai"]
  },
  "ts-node": {
    "swc": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/**/*.spec.ts"]
}
