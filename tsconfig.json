{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "pretty": true,
    "outDir": "dist",
    "typeRoots": ["node_modules/@types", "types"],
    "types": ["node", "mocha", "chai"]
  },
  "ts-node": {
    "swc": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}
